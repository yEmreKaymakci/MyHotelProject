@model List<BookingApiLocationSearchViewModel.LocationItem>
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container mt-5">
    <br />
    @using(Html.BeginForm("Index", "SearchLocationID", FormMethod.Post))
    {
        <label>Şehir Adını Giriniz</label>
		<input type="text" class="form-control" name="cityName" />
		<br />
		<button class="btn btn-primary">Şehir İçin ID Bul</button>
    }

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Lokasyon ID</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.id</td>
                </tr>
            }
        </tbody>
    </table>
	<br />
    <a href="/BookingByCity/Index/" class="btn btn-dark">Yeni Otel Rezervasyon Bilgisi</a>
</div>