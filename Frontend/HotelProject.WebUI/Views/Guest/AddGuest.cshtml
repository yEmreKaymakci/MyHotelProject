@model CreateGuestDto
@{
	ViewData["Title"] = "AddGuest";
	Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
	<label>Misafir Adı</label>
	<input type="text" asp-for="Name" class="form-control" />
	<br />

	<label>Misafir Soyadı</label>
	<input type="text" asp-for="SurName" class="form-control" />
	<br />

	<label>Misafir Şehri</label>
	<input type="text" asp-for="City" required class="form-control" />
	<br />
	<button class="btn btn-outline-primary">Misafiri Ekle</button>
</form>